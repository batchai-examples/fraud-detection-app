<configuration>

    <appender name="CloudWatchAppender" class="com.amazonaws.services.cloudwatchlogs.logback.CloudWatchAppender">
        <!-- CloudWatch Log Group -->
        <logGroup>my-application-logs</logGroup>
        
        <!-- CloudWatch Log Stream -->
        <logStream>my-log-stream</logStream>

        <!-- Log the log entries from INFO level and above -->
        <logLevel>INFO</logLevel>

        <!-- Set to true if you want to include the MDC (Mapped Diagnostic Context) info -->
        <includeMDC>false</includeMDC>

        <!-- Set the AWS region for CloudWatch -->
        <region>us-east-1</region>
    </appender>

    <root level="INFO">
        <appender-ref ref="CloudWatchAppender"/>
    </root>

</configuration>
